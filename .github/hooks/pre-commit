#!/bin/bash
# Pre-commit hook to run linting on staged files

echo "Running lint checks on staged files..."

# Run lint-staged (checks only staged .ts and .tsx files)
npx lint-staged

if [ $? -ne 0 ]; then
  echo "❌ Lint or type check failed. Please fix the errors before committing."
  exit 1
fi

echo "✅ All checks passed!"
exit 0
