{
  "name": "daily",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run db:migrate && next build",
    "start": "next start",
    "lint": "eslint",
    "db:migrate": "tsx scripts/migrate.ts",
    "prepare": "test -d .git && ln -sf ../../.github/hooks/pre-commit .git/hooks/pre-commit || true",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:auth": "E2E_AUTHENTICATED=1 playwright test",
    "test:e2e:auth:ui": "E2E_AUTHENTICATED=1 playwright test --ui"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "canvas-confetti": "^1.9.4",
    "iron-session": "^8.0.4",
    "next": "16.0.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "resend": "^6.5.2",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "lint-staged": "^16.2.7",
    "tailwindcss": "^4",
    "tsc-files": "^1.1.4",
    "tsx": "^4.19.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "tsc-files --noEmit"
    ]
  }
}
